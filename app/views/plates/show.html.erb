<p style="color: green"><%= notice %></p>
<div class="p-10">
  <%= link_to "Lista de platos", plates_path, class: "btn btn-dark" %>
</div>

<div class="card text-center col-md-2 offset-md-5">
  <%= render @plate %>

  <div class="p-10">
    <%= link_to "Editar", edit_plate_path(@plate), class: "btn btn-success" %>
    <div class="d-i-flex">
      <%= button_to "Eliminar", @plate, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
